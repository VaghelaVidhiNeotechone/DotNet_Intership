@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<MvcCrudDemo.Models.Student>

@{
    ViewBag.Title = "Student List";
}

<h2>@ViewBag.Title</h2>
<p><a href="/Student/Create">Add New Student</a></p>

<table border="1" cellpadding="5">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Age</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>

    @foreach (var s in Model)
    {
        <tr>
            <td>@s.Id</td>
            <td>@s.Name</td>
            <td>@s.Age</td>
            <td>@s.Email</td>
            <td>
                <a href="/Student/Details/@s.Id">Details</a> |
                <a href="/Student/Edit/@s.Id">Edit</a> |
                <a href="/Student/Delete/@s.Id">Delete</a>
            </td>
        </tr>
    }
</table>
