@model ShoppingAppMVC.Models.Shopping

@{
    ViewBag.Title = "Product Details";
}

<h2>Product Details</h2>
<hr />

<dl class="dl-horizontal">
    <dt>Product Name</dt>
    <dd>@Html.DisplayFor(m => m.ProductName)</dd>

    <dt>Quantity</dt>
    <dd>@Html.DisplayFor(m => m.Quantity)</dd>

    <dt>Price</dt>
    <dd>@Html.DisplayFor(m => m.Price)</dd>

    <dt>Description</dt>
    <dd>@Html.DisplayFor(m => m.Description)</dd>

    <dt>Size</dt>
    <dd>@Html.DisplayFor(m => m.Size)</dd>

    <dt>Discount</dt>
    <dd>@Html.DisplayFor(m => m.Discount)</dd>

    <dt>Product Image</dt>
    <dd><img src="@Url.Content(Model.ProductIMG)" width="100" height="100" /></dd>
</dl>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
