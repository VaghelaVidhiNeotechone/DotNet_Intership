@model ShoppingAppMVC.Models.Shopping

@{
    ViewBag.Title = "Delete Product";
}

<h2>Delete Product</h2>
<h3>Are you sure you want to delete this?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Product Name</dt>
        <dd>@Html.DisplayFor(m => m.ProductName)</dd>

        <dt>Quantity</dt>
        <dd>@Html.DisplayFor(m => m.Quantity)</dd>

        <dt>Price</dt>
        <dd>@Html.DisplayFor(m => m.Price)</dd>

        <dt>Image</dt>
        <dd><img src="@Url.Content(Model.ProductIMG)" width="80" height="80" /></dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" /> |
@Html.ActionLink("Back to List", "Index")
}
</div>
