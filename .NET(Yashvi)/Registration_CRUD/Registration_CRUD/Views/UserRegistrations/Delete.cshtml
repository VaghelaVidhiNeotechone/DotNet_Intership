@model RegistrationFormMVC.Models.UserRegistration

@{
    ViewData["Title"] = "Delete User";
}

<h2 class="text-center my-4 text-danger">Delete User</h2>

<div class="alert alert-warning w-75 mx-auto">
    <h4>Are you sure you want to delete this user?</h4>
</div>

<div class="card w-75 mx-auto shadow p-4">
    <dl class="row">
        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Gender</dt>
        <dd class="col-sm-9">@Model.Gender</dd>

        <dt class="col-sm-3">Skills</dt>
        <dd class="col-sm-9">@Model.Skills</dd>

        <dt class="col-sm-3">Country</dt>
        <dd class="col-sm-9">@Model.Country</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
