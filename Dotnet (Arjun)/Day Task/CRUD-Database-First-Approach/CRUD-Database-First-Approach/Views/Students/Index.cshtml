@{
}


@model IEnumerable<CRUD_Database_First_Approach.Models.Student>

<div class="container mt-5">
    <h2 class="mb-4">Students List</h2>
    <a asp-action="Create" class="btn btn-success mb-3">Add New Student</a>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>City</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>@student.City</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@student.StudentId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-warning btn-sm ms-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@student.StudentId" class="btn btn-danger btn-sm ms-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



