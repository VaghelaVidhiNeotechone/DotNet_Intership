@{
}


@model CRUD_Database_First_Approach.Models.Student

<div class="container mt-5">
    <h2 class="mb-4">Student Details</h2>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <strong>@Model.Name</strong>
        </div>
        <div class="card-body">
            <p><strong>Student ID:</strong> @Model.StudentId</p>
            <p><strong>Age:</strong> @Model.Age</p>
            <p><strong>City:</strong> @Model.City</p>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </div>
</div>
