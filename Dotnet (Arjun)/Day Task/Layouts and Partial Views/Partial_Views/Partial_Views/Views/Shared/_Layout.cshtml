<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My App</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h2>My MVC App</h2>
        <nav>
            <a href="/">Home</a> |
            <a href="/Home/About">About</a>
        </nav>
    </header>

    <div class="main-container">
        <div class="sidebar" id="sidebarContainer">
        </div>

        <div class="content">
            @RenderBody()
        </div>
    </div>

    <footer>
        <hr />
        <p>2025 - My MVC App</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("LoadSidebar", "Home")',
                type: 'GET',
                success: function (result) {
                    $("#sidebarContainer").html(result);
                },
                error: function () {
                    $("#sidebarContainer").html("<p>Sidebar Load Error.</p>");
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
